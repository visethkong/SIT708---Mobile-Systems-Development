<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:layout_marginHorizontal="40dp"
    tools:context=".Activities.ChooseRoleActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@null">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingVertical="25dp"
            android:focusedByDefault="false"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <ImageView
                android:id="@+id/applicationLogo"
                android:layout_width="180dp"
                android:layout_height="160dp"
                android:layout_marginHorizontal="80dp"
                android:scaleType="fitCenter"
                android:background="@drawable/logo_tran"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/chooseRoleTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/applicationLogo"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/google_sans_medium"
                android:gravity="center_horizontal"
                android:text="@string/choose_your_role"
                android:textAlignment="center"
                android:textColor="@color/textColorGrey"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/studentButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/background_button"
                android:textColor="@color/white"
                android:text="Student"
                android:textAllCaps="false"
                android:fontFamily="@font/google_sans_medium"
                android:textSize="18dp"
                android:layout_below="@id/chooseRoleTitle"
                android:layout_marginTop="@dimen/_16sdp"
                style="?android:attr/borderlessButtonStyle"
                />
            <Button
                android:id="@+id/tutorButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/background_button"
                android:textColor="@color/white"
                android:text="Tutor"
                android:textAllCaps="false"
                android:fontFamily="@font/google_sans_medium"
                android:textSize="18dp"
                android:layout_below="@id/studentButton"
                android:layout_marginTop="@dimen/_16sdp"
                style="?android:attr/borderlessButtonStyle"
                />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>